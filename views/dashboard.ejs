<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/style.css">
<link rel="stylesheet" href="/stylesheets/form.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<title>Dashboard</title>
</head>

<body>


<div class="container" id="body">
    <% if (typeof message !== 'undefined') { %>
        <div class="message">
            <%= message %>
        </div>
    <% } %>
    <br>

    <div class="row bg-white rounded-4">
        <div class="justify-content-end">
            <% if (typeof firstName !== 'undefined' && typeof lastName !== 'undefined') { %>
                    <div class="h2 text message">Hello <%= firstName %>  <%= lastName %></div>
            <% } %>
            <form action="/api/logout" method="post">
                <button class="btn btn-block text-center my-3" type="submit">Logout</button>
            </form>
        </div>
        <div id="header" class="row">
            <div class="h2 text-center">NASA API</div>
            <div class="img  text-center"><img src="https://upload.wikimedia.org/wikipedia/commons/e/e5/NASA_logo.svg" alt="..." class="img-fluid"></div>
            <p class="h4 text-muted text-center pt-2">choose daily pics from Nasa api,<br> you can add comments for the pictures</p>
        </div>
        <div id="main" >

            <div class="row justify-content-center align-items-center text-center">

                <form name="dateForm" class="pt-3 product-form">
                    <label for="date" class="h5 text-muted text-center pt-2 col-12">Pick a date for load 3 daily pictures from this day</label>
                    <input class="form-control " type="date" name="date" id="date" >
                </form>
            </div>
            <div class="loader-container">
                <div class="spinner"></div>
            </div>
            <div id="datesList" class="row p-2 mb-3 rounded-4">

            </div>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
<script src="javascripts/ex6.js"></script>
</body>
</html>